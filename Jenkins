pipleline{
    agent any
        stages{
            stage('build'){
                agent{
                    docker{
                        image 'node:18-alpine'
                        reusenode true
                    }
                }
                steps{
                    sh '''
                    npm --version
                    ls -la
                    node --version
                    npm ci
                    npm run build
                    ls -la
                    '''
                }
            }

        }
}
